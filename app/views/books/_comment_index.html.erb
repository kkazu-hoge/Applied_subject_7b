<table id="comment_index">
<% book.book_comments.each do |bc| %>
<tr>
  <td>
    <%= link_to user_path(bc.user_id) do %>
    <%= image_tag bc.user.get_profile_image, size:"120x120" %><br>
    <%= bc.user.name %>
    <% end %>
  </td>
  <td>
    <%= bc.comment %>
  </td>
  <td>
    <% if bc.user_id == current_user.id %>
      <%= link_to 'Destroy', book_book_comment_path(bc.book_id, bc.id), method: :delete, class: "btn btn-sm btn-danger", remote:true %>
    <% end %>
  </td>
</tr>
<% end %>
</table>